<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/assets/css/style.css" />
    <link rel="stylesheet" href="/assets/css/detail.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <title>Detail Page</title>
    <style>
      .active { font-weight: bold; color: #111727 !important; }
    </style>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary ps-4">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">
          <img src="/assets/images/dumbways.png" style="width: 50px" />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/project">My
                Project</a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link"
                aria-current="page"
                href="/testimonial"
              >Testimonial</a>
            </li>
          </ul>
          <a href="/contact" class="btn btn-danger">Contact Me</a>
        </div>
      </div>
    </nav>

    <!-- formulir -->
    <h2 class="mt-3">{{data.title}}</h2>
    <div id="main-container-detail">
      <!-- first column -->
      <div id="first-column-detail">
        <img id="self-portrait" src="/{{data.image}}" alt="self-portrait" />
      </div>

      <!-- second column -->
      <div id="second-column-detail">
        <div id="duration-section">
          <p class="no-margin-top"><strong>Duration</strong></p>
          <div class="icon-text">
            <i class="fa fa-calendar"> </i>
            <p class="no-margin">{{startDate}} s/d {{endDate}}</p>
          </div>

          <div class="icon-text mt-3">
            <i class="fa fa-clock-o"> </i>
            <p class="no-margin-left mt-0 mb-0">{{data.duration}}</p>
          </div>
        </div>

        <div id="technologies-section">
          <p class="no-margin-top"><strong>Technologies</strong></p>

          {{#each data.technologies}}
            <div class="tech-row">
              <div class="icon-text tech-item">
                <i class="fa fa-laptop"> </i>
                <p class="no-margin-left mt-0 mb-2">{{this}}</p>
              </div>
            </div>
          {{/each}}

        </div>
      </div>
    </div>

    <div id="description-container">
      {{data.description}}
    </div>
  </body>
</html>